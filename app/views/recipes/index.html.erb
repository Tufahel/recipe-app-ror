<section>
  <div>
  <% if can? :create, @recipes.first %>
   <%= button_to "Add Recipe", new_recipe_path, method: :get, class:"btn btn-primary mx-4 my-2" %>
   <% end %>
  </div>
  <% if @recipes.exists? %>
      <% @recipes.each do |recipe| %>
      <div class="container-fluid">
        <div class="d-flex justify-content-around align-items-center border m-2">
          <div class="mx-4">
            <p><%= link_to recipe.name ,recipe_path(recipe.id) %></p>
            <% if can? :destroy, recipe %>
            <p><%= button_to "Remove", recipe_path(recipe.id), method: :delete, class:"btn btn-danger" %></p>
          <% end %>  
          </div>
          <div class="mx-4">
            <p><span class="w-50"><%= recipe.description %></span></p>
          </div>
        </div>
      </div>
      <% end %>
   <% else %>
          <p>No Recipe Added yet</p> 
      <% end %>
  <div>
</div>
</section>
