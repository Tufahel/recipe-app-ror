<h1 class='text-center mb-3'>New Recipe</h1>

<div class='mb-5'>
  <%= form_with(model: @recipe, url: recipes_path) do |f| %>

      <div class="row form ml-4">
    <div class= "form-group d-flex mb-4" >
      <%= f.label "Name:", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-7" >
      <%= f.text_field :name,   class:"form-control", placeholder: "Enter recipe name", autofocus: true %>
      </div>
    </div>

    <div class= "form-group d-flex" >
      <%= f.label "Description:", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-7" >
      <%= f.text_area :description, class:"form-control", placeholder: "Enter recipe description", autofocus: true %>
      </div>
    </div>


    <div class= "form-group d-flex my-4" >
      <%= f.label "Cooking time", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-2" >
      <%= f.number_field :cookingTime,   class:"form-control", autofocus: true %>
      </div>
    </div>

    <div class= "form-group d-flex my-4" >
      <%= f.label "Preparation time", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-2" >
      <%= f.number_field :preparationTime,   class:"form-control", autofocus: true %>
      </div>
    </div>

    <div class= "form-group d-flex my-4" >
      <%= f.label "Public", class: "col-sm-2 col-form-label text-end mx-4" %> 
      <div class = "col-sm-2" >
      <%= f.check_box :public,   class:"form-control", autofocus: true %>
      </div>
    </div>
    
    <div class= "form-group d-flex" >
      <div class= "col-sm-2  mx-4"></div>
      <%= f.submit class: "btn btn-lg btn-warning submit-btn mt-4" %>
    </div>
  </div> 
  
  <% end %>
</div>