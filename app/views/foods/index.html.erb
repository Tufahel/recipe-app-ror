<section>
  <% if can? :create, @foods.first %>
    <%= button_to "Add Food", new_food_path, method: :get %>
  <% end %>
  <% if @foods.exists? %>
  <table>
    <th>
     <td>Food</td>
     <td>quantity</td>
     <td>Measurement unit</td>
     <td>Unit price</td>
     <td>Action</td>
    </td>
    
      <% @foods.each do |food| %>
      <tr>
        <td><%= link_to food.name ,food_path(food.id) %></td>
          <td><%= food.quantity %></td>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <% if can? :destroy, food %>
            <td><%= button_to "Delete", food_path(food.id), method: :delete %></td>
          <% end %>
             </tr>
      <% end %>
 
  </table>
   <% else %>
          <p>No Food Added yet</p> 
    <% end %>
  <div>
</div>
</section>