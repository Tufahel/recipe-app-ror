<%= form_with model: food, url: foods_path  do |form| %>

      <div>
         <%= form.label :name %><br />
         <%= form.text_field :name, autofocus: true, autocomplete: "text" %>
         <% food.errors.full_messages_for(:name).each do |message| %>
           <div><%= message %></div>
         <% end %>
      </div><br />

      <div>
          <%= form.label :quantity %><br />
          <%= form.number_field :quantity, autofocus: true %>
          <% food.errors.full_messages_for(:quantity).each do |message| %>
            <div><%= message %></div>
          <% end %>
      </div>
   
      <div>
         <%= form.label :measurement_unit %><br />
         <%= form.text_field :measurement_unit, autofocus: true %>
         <% food.errors.full_messages_for(:measurement_unit).each do |message| %>
           <div><%= message %></div>
         <% end %>
      </div>


    <div>
        <%= form.label :price %><br />
        <%= form.number_field :price, autofocus: true %>
        <% food.errors.full_messages_for(:price).each do |message| %>
          <div><%= message %></div>
        <% end %>
    </div>
    
  <div>
    <%= form.submit %>
  </div>
<% end %>